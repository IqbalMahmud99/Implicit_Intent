<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A6DC3"
    tools:context=".Home_Activity">


  <TextView
      android:id="@+id/showtext"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:paddingLeft="28dp"
      android:textColor="#FCFFFB"
      android:textSize="15sp"
      android:text="Daffodil international professional Training institute"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />




  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/showimage"
      android:layout_width="110dp"
      android:layout_height="110dp"
      android:layout_marginTop="36dp"
      android:src="@drawable/images"
      app:civ_border_color="#F4074A"
      app:civ_border_width="3dp"
      app:layout_constraintEnd_toEndOf="@+id/showtext"
      app:layout_constraintHorizontal_bias="0.479"
      app:layout_constraintStart_toStartOf="@+id/showtext"
      app:layout_constraintTop_toBottomOf="@+id/showtext" />


  <TextView
      android:id="@+id/showusernm"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:layout_marginTop="48dp"
      android:background="@drawable/user"
      android:padding="14dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      app:layout_constraintEnd_toEndOf="@+id/showimage"
      app:layout_constraintHorizontal_bias="0.478"
      app:layout_constraintStart_toStartOf="@+id/showimage"
      app:layout_constraintTop_toBottomOf="@+id/showimage" />


  <TextView
      android:id="@+id/showage"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="40dp"
      android:background="@drawable/user"
      android:padding="14dp"
      app:layout_constraintEnd_toEndOf="@+id/showusernm"
      app:layout_constraintStart_toStartOf="@+id/showusernm"
      app:layout_constraintTop_toBottomOf="@+id/showusernm" />


  <TextView
      android:id="@+id/showemail"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="40dp"
      android:background="@drawable/user"
      android:padding="14dp"
      app:layout_constraintEnd_toEndOf="@+id/showage"
      app:layout_constraintStart_toStartOf="@+id/showage"
      app:layout_constraintTop_toBottomOf="@+id/showage" />

  <TextView
      android:id="@+id/showaddrs"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="40dp"
      android:background="@drawable/user"
      android:padding="14dp"
      app:layout_constraintEnd_toEndOf="@+id/showemail"
      app:layout_constraintStart_toStartOf="@+id/showemail"
      app:layout_constraintTop_toBottomOf="@+id/showemail" />

  <Button
      android:id="@+id/showbutton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="64dp"
      android:backgroundTint="#5CD630"
      android:fontFamily="sans-serif-medium"
      android:text="Back"

      android:layout_marginStart="90dp"
      android:layout_marginEnd="90dp"
      android:textAllCaps="true"
      android:textSize="29sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/showaddrs"
      app:layout_constraintStart_toStartOf="@+id/showaddrs"
      app:layout_constraintTop_toBottomOf="@+id/showaddrs" />

</androidx.constraintlayout.widget.ConstraintLayout>